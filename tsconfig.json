{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "noImplicitThis": true,
    "esModuleInterop": true,
    "removeComments": false,
    "noImplicitAny": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "typeRoots": ["./node_modules/@types/", "./@types"],
    "declaration": true,
    "outDir": "./@types"
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "dist", "test", "conf", "example"],
  "compileOnSave": false
}
