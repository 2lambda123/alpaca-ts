{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitThis": true,
    "esModuleInterop": true,
    "removeComments": false,
    "noImplicitAny": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "typeRoots": ["./node_modules/@types"],
    "declarationDir": "./@types",
    "composite": true
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "@types", "dist", "test", "conf", "example"],
  "compileOnSave": false
}
